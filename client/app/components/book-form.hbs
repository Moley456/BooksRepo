<form class='form'>
  <label class='form-label title'>
    Title:
    <Input
      class='form-input title'
      @type='text'
      @value={{this.title}}
      maxlength='50'
    />
  </label>
  <label class='form-label publisher'>
    Publisher:
    <Input
      class='form-input publisher'
      @type='text'
      @value={{this.publisher}}
      maxlength='50'
    />
  </label>
  <label class='form-label year'>
    Published year:
    <Input
      class='form-input year'
      @type='number'
      @value={{this.year}}
      max='9999'
    />
  </label>
  <label class='form-label author'>
    Name of Author:
    <Input
      class='form-input author'
      @type='text'
      @value={{this.authorName}}
      maxlength='50'
    />
  </label>
  <div class='submit-button-row'>
    <text class='submit-status'>
      {{#if this.isSubmitSuccess}}
        Success!
      {{else if this.isSubmitError}}
        Error. Please try again.
      {{/if}}
    </text>
    {{#if (eq @type 'add')}}
      <button
        class='form-button add'
        type='submit'
        disabled={{this.disableSubmit}}
        {{on 'click' this.submitAddForm}}
      >
        Add Book
      </button>
    {{else if (eq @type 'edit')}}
      <button
        class='form-button delete-button'
        type='submit'
        {{on 'click' this.deleteBook}}
      >
        Delete Book
      </button>
      <button
        class='form-button edit'
        type='submit'
        disabled={{this.disableSubmit}}
        {{on 'click' this.submitEditForm}}
      >
        Edit Book
      </button>
    {{/if}}
  </div>

</form>